<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<edmx:Edmx xmlns="http://docs.oasis-open.org/odata/ns/edm"
    xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:DataServices>
        <Schema Namespace="test.pyslet.org">
            <EntityType Name="TypeA" Abstract="true">
                <Property Name="ID" Type="Edm.Int32" Nullable="false"/>                
            </EntityType>
            <EntityType Name="TypeB" BaseType="test.pyslet.org.TypeA">
                <Key>
                    <!-- The [Name attribute of the] edm:PropertyRef
                    element MUST be a path expression resolving to a
                    primitive property of the entity type itself or to a
                    primitive property of a complex property
                    (recursively) of the entity type.
                    
                    In this context, it seems like "the entity type
                    itself" is supposed to exclude inheriting properties
                    from the base type. -->
                    <PropertyRef Name="ID"/>
                </Key>
                <Property Name="Info" Type="Edm.String" Nullable="false"/>                
            </EntityType>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>
